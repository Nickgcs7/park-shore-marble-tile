---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const projects = await getCollection('projects');
const sortedProjects = projects.sort((a, b) => 
  new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);
---

<BaseLayout title="Projects">
  <h1 style="font-size: 2.5rem; margin-bottom: 2rem;">Our Projects</h1>
  <p style="font-size: 1.1rem; color: #666; margin-bottom: 3rem;">
    Browse our portfolio of completed projects showcasing our craftsmanship and attention to detail.
  </p>

  {sortedProjects.length === 0 ? (
    <div style="text-align: center; padding: 4rem 2rem; background: #f8f9fa; border-radius: 8px;">
      <p style="font-size: 1.2rem; color: #666;">No projects to display yet. Check back soon!</p>
    </div>
  ) : (
    <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); gap: 2rem;">
      {sortedProjects.map((project) => (
        <article style="border: 1px solid #ddd; border-radius: 8px; overflow: hidden; transition: transform 0.2s;">
          {project.data.image && (
            <img 
              src={project.data.image} 
              alt={project.data.title}
              style="width: 100%; height: 250px; object-fit: cover;"
            />
          )}
          <div style="padding: 1.5rem;">
            <h2 style="font-size: 1.5rem; margin-bottom: 0.5rem;">{project.data.title}</h2>
            <p style="color: #666; margin-bottom: 1rem;">
              {new Date(project.data.date).toLocaleDateString('en-US', { 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
              })}
            </p>
            <p style="line-height: 1.6;">{project.data.description}</p>
          </div>
        </article>
      ))}
    </div>
  )}

  <section style="margin-top: 4rem; text-align: center; background: #f8f9fa; padding: 3rem; border-radius: 8px;">
    <h2 style="font-size: 2rem; margin-bottom: 1rem;">Start Your Project Today</h2>
    <p style="margin-bottom: 2rem; font-size: 1.1rem;">Let's discuss how we can transform your space</p>
    <a href="/contact" style="display: inline-block; background: #2c3e50; color: white; padding: 1rem 2rem; text-decoration: none; border-radius: 4px; font-weight: bold;">
      Contact Us
    </a>
  </section>
</BaseLayout>